<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp"
    android:layout_margin="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporkan Masalah"
        android:textColor="@color/textPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelaskan masalah yang Anda alami. Laporan akan dikirim otomatis ke tim support."
        android:textColor="@color/textSecondary"
        android:textSize="13sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/et_report_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:background="@drawable/input_background"
        android:padding="14dp"
        android:hint="Tulis masalah Anda di sini..."
        android:textSize="14sp"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textTertiary"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_report"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:text="BATAL"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/btn_send_report"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/button_primary"
            android:text="KIRIM"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>