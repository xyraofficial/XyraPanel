<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/backgroundDark"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="16dp">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:scaleType="center"
                android:contentDescription="Menu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XyraPanel"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP Sender Tool"
                    android:textColor="@color/textTertiary"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_failure_info"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/chip_unselected"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/iosOrange" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0"
                android:textSize="12sp"
                android:textColor="@color/textTertiary"
                android:background="@drawable/chip_unselected"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_ios"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Number"
                        android:textColor="@color/textSecondary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:id="@+id/et_target_phone"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/input_ios"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:hint="08xx xxxx xxxx"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textTertiary"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Count"
                        android:textColor="@color/textSecondary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:id="@+id/et_jumlah_kirim"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/input_ios"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:hint="1-5"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textTertiary"
                        android:inputType="number"
                        android:maxLength="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_ios"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Select"
                        android:textColor="@color/textTertiary"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <Button
                            android:id="@+id/btn_quick_1"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_unselected"
                            android:text="1"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp" />

                        <Button
                            android:id="@+id/btn_quick_3"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_unselected"
                            android:text="3"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp" />

                        <Button
                            android:id="@+id/btn_quick_5"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_unselected"
                            android:text="5"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp" />

                        <Button
                            android:id="@+id/btn_quick_random"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1.2"
                            android:background="@drawable/chip_selected"
                            android:text="Random"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provider"
                        android:textColor="@color/textTertiary"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_sms"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_selected"
                            android:text="SMS"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginRight="12dp" />

                        <Button
                            android:id="@+id/btn_whatsapp"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_unselected"
                            android:text="WhatsApp"
                            android:textColor="@color/textPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_start_flood"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_ios_primary"
                    android:text="Start Sending"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_ios"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:id="@+id/status_dot"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/status_indicator_ready"
                            android:layout_marginRight="12dp" />

                        <TextView
                            android:id="@+id/tv_status_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ready"
                            android:textColor="@color/iosGreen"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textColor="@color/textTertiary"
                            android:textSize="11sp"
                            android:letterSpacing="0.1" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_ios"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_ios"
                            android:padding="16dp"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:id="@+id/tv_stat_success"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/iosGreen"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Success"
                                android:textColor="@color/textTertiary"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_ios"
                            android:padding="16dp"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:id="@+id/tv_stat_failed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/iosRed"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="@color/textTertiary"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_ios"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_stat_avg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/iosBlue"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ms"
                                android:textColor="@color/textTertiary"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <View
        android:id="@+id/drawer_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlayColor"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sidebarBackground"
        android:visibility="gone"
        android:elevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sidebarHeader"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="48dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XyraPanel"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0"
                android:textColor="@color/textTertiary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Home"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:background="@drawable/sidebar_item_bg"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="16dp" />

            <TextView
                android:id="@+id/nav_history"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="History"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:background="@drawable/sidebar_item_bg"
                android:drawableLeft="@drawable/ic_history"
                android:drawablePadding="16dp" />

            <TextView
                android:id="@+id/nav_about"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="About"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:background="@drawable/sidebar_item_bg"
                android:drawableLeft="@drawable/ic_info"
                android:drawablePadding="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/nav_report"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Report Issue"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:background="@drawable/sidebar_item_bg"
                android:drawableLeft="@drawable/ic_report"
                android:drawablePadding="16dp" />

            <TextView
                android:id="@+id/nav_privacy"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Privacy Policy"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:background="@drawable/sidebar_item_bg"
                android:drawableLeft="@drawable/ic_privacy"
                android:drawablePadding="16dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by XyraOfficial"
            android:textColor="@color/textTertiary"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="16dp" />

    </LinearLayout>

</FrameLayout>