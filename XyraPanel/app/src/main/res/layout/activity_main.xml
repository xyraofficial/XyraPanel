<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundLight">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="16dp"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:scaleType="center"
                android:contentDescription="Menu" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XyraPanel"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp" />

            <LinearLayout
                android:id="@+id/btn_failure_info"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/warning_icon_bg"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0"
                android:textSize="12sp"
                android:textColor="#B0FFFFFF"
                android:background="@drawable/stat_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOMOR TARGET"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="6dp" />

                    <EditText
                        android:id="@+id/et_target_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:padding="14dp"
                        android:hint="Contoh: 0812xxxxxxxx"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textTertiary"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:drawableLeft="@drawable/ic_sms"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUMLAH PENGIRIMAN"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="6dp" />

                    <EditText
                        android:id="@+id/et_jumlah_kirim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:padding="14dp"
                        android:hint="Masukkan angka (1-5)"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textTertiary"
                        android:inputType="number"
                        android:maxLength="3"
                        android:drawableLeft="@drawable/ic_send"
                        android:drawablePadding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUICK SELECT"
                        android:textColor="@color/textTertiary"
                        android:textSize="10sp"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/btn_quick_1"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_quick"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp" />

                        <Button
                            android:id="@+id/btn_quick_3"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_quick"
                            android:text="3"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp" />

                        <Button
                            android:id="@+id/btn_quick_5"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_quick"
                            android:text="5"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp" />

                        <Button
                            android:id="@+id/btn_quick_random"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/button_quick_accent"
                            android:text="ACAK"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PILIH LAYANAN"
                        android:textColor="@color/textTertiary"
                        android:textSize="10sp"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_sms"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_quick"
                            android:text="SMS"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp" />

                        <Button
                            android:id="@+id/btn_whatsapp"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_quick_accent"
                            android:text="WHATSAPP"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_start_flood"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_primary"
                    android:text="MULAI KIRIM"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <View
                            android:id="@+id/status_dot"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_green"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:id="@+id/tv_status_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ready"
                            android:textColor="@color/successColor"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textColor="@color/textTertiary"
                            android:textSize="10sp"
                            android:letterSpacing="0.1" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_background"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_background"
                            android:padding="10dp"
                            android:layout_marginRight="6dp">

                            <TextView
                                android:id="@+id/tv_stat_success"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/successColor"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Berhasil"
                                android:textColor="@color/textSecondary"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_background"
                            android:padding="10dp"
                            android:layout_marginRight="6dp">

                            <TextView
                                android:id="@+id/tv_stat_failed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/errorColor"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Kirim"
                                android:textColor="@color/textSecondary"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_background"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tv_stat_avg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ms"
                                android:textColor="@color/textSecondary"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <Button
                        android:id="@+id/btn_history"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_quick"
                        android:text="RIWAYAT"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginRight="8dp" />

                    <Button
                        android:id="@+id/btn_about"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_quick"
                        android:text="TENTANG"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/cardBackground"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XyraPanel"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0 - OTP Flood Tool"
                android:textColor="#B0FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="Beranda"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/nav_history"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="Riwayat"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/nav_about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="Tentang"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Bantuan"
                android:textColor="@color/textTertiary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nav_report"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="Laporkan Masalah"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/nav_privacy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="Kebijakan Privasi"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
