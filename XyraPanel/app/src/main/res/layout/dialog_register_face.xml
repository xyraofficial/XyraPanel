<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Face ID"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/iv_dialog_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_face_scan"
            android:scaleType="fitCenter" />

        <ProgressBar
            android:id="@+id/progress_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateTint="#6C63FF" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_dialog_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siap Mendaftar"
        android:textColor="#6C63FF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tekan tombol di bawah untuk memulai pendaftaran wajah. Pastikan wajah Anda terlihat jelas dan pencahayaan cukup."
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Pendaftaran:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Pastikan wajah berada di tengah layar\n2. Pencahayaan harus cukup terang\n3. Jangan gunakan kacamata hitam\n4. Posisikan wajah lurus ke kamera"
            android:textColor="#888888"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="MULAI PENDAFTARAN"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="BATAL"
        android:textColor="#888888"
        android:textSize="14sp"
        android:background="@android:color/transparent" />

</LinearLayout>
